{
  "name": "lezhnev74/pasvl",
  "description": "PHP Array Structure Validation Library",
  "keywords": [
    "validation",
    "array",
    "structure",
    "pattern"
  ],
  "authors": [
    {
      "name": "Dmitriy Lezhnev",
      "email": "lezhnev.work@gmail.com"
    }
  ],
  "license": "MIT",
  "require": {
    "ext-mbstring": "*"
  },
  "require-dev": {
    "phpunit/phpunit": "^9.2|^7.0",
    "roave/security-advisories": "dev-master",
    "squizlabs/php_codesniffer": "^3.5",
    "phpstan/phpstan-webmozart-assert": "^0.12.7",
    "icanhazstring/composer-unused": "^0.7.3",
    "phan/phan": "^3.2"
  },
  "autoload": {
    "psr-4": {
      "PASVL\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "PASVL\\Tests\\": "tests/"
    }
  },
  "scripts": {
    "init-git-hook": [
      "ln -s -f ../../.githooks/pre-commit .git/hooks/pre-commit",
      "chmod +x .git/hooks/pre-commit"
    ]
  }
}
